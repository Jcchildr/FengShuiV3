@model FengShui.Models.AmbienceCreate

@{
    ViewBag.Title = "Create";
}

@section Styles
{
    <style type="text/css">
        h2 {
            font-variant: small-caps;
        }

        h4 {
            font-family: Georgia, serif;
        }

        body, html {
            height: 100%;
            background-size: cover;
            background-repeat: no-repeat;
            background: #AE9DE0;
            background: -moz-linear-gradient(top, #AE9DE0 0%, #AE9DE0 50%, #FFFFFF 100%);
            background: -webkit-linear-gradient(top, #AE9DE0 0%, #AE9DE0 50%, #FFFFFF 100%);
            background: linear-gradient(to bottom, #AE9DE0 0%, #AE9DE0 50%, #FFFFFF 100%);
        }

        #button {
            transition-duration: 0.8s;
            background-color: transparent;
        }

       #button:hover {
            background-color: darkseagreen;
       }
    </style>
}


<body>

    <h2 class="text-center">Create A New Ambience</h2>
    <h4 class="text-center">An ambience is the character and atmosphere of a place. 
    Think of how a place can make you feel with the use of different furnature or decor.</h4>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.AmbienceName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AmbienceName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AmbienceName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AmbienceDesription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AmbienceDesription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AmbienceDesription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="button" type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>