    ViewBag.Title = "About";
}

@section Styles
{
    <style type="text/css">


        h1 {
            color: #333333;
            background: #8AA1FF;
            text-shadow: 2px 2px 0px #FFFFFF, 5px 4px 0px rgba(0,0,0,0.15);
            color: #333333;
            background: #8AA1FF;
            font-variant: small-caps;
        }

        #tablesJumbotron {
            background: #8AA1FF;
        }

        h4 {
            font-family: Georgia, serif;
            font-size: 24px;
        }

        p {
            font-family: Georgia,serif;
        }

        body, html {
            height: 100%;
            background-size: cover;
            background-repeat: no-repeat;
            background: #8AA1FF;
            background: -moz-linear-gradient(top, #8AA1FF 0%, #8AA1FF 50%, #FFFFFF 100%);
            background: -webkit-linear-gradient(top, #8AA1FF 0%, #8AA1FF 50%, #FFFFFF 100%);
            background: linear-gradient(to bottom, #8AA1FF 0%, #8AA1FF 50%, #FFFFFF 100%);
        }
