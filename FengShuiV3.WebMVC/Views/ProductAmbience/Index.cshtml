@model IEnumerable<FengShui.Models.ProductAmbienceList>

@{
    ViewBag.Title = "Index";
}

@section Styles
{
    <style type="text/css">
        h1 {
            color: #333333;
            background: #E0968B;
            text-shadow: 2px 2px 0px #FFFFFF, 5px 4px 0px rgba(0,0,0,0.15);
            color: #333333;
            background: #E0968B;
            font-variant: small-caps;
        }

        #tablesJumbotron {
            background: #E0968B;
        }

        h4 {
            font-family: Georgia, serif;
            font-size: 24px;
        }

        p {
            font-family: Georgia,serif;
        }

        body, html {
            height: 100%;
            background-size: cover;
            background-repeat: no-repeat;
            background: #E0968B;
            background: -moz-linear-gradient(top, #E0968B 0%, #E0968B 50%, #FFFFFF 100%);
            background: -webkit-linear-gradient(top, #E0968B 0%, #E0968B 50%, #FFFFFF 100%);
            background: linear-gradient(to bottom, #E0968B 0%, #E0968B 50%, #FFFFFF 100%);
        }

        button {
            transition-duration: 0.8s;
        }

            button:hover {
                background-color: transparent;
            }
    </style>
}

<body id="productindexbody">
    <div class="jumbotron" id="tablesJumbotron">
        <div class="container" id="jumbotroncontainer">
            <h1 id="HeaderText" class="text-center">Ambience & Product Relationships</h1>
            <h4 class="text-center">Connect all Products to an Ambience.</h4>
            <p class="text-center">
                @Html.ActionLink("Add a new Ambience & Product relationship ", "Create")
            </p>

        </div>
    </div>
    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">

            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmbienceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmbienceName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmbienceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmbienceName)
        </td>
        <td>
            <div id="buttontable" class="btn-group btn-group-xs" role="group" aria-label="...">
                @Html.ActionLink("View All Products under this Ambience", "PADetails", new { id = item.AmbienceId })
            </div>
        </td>
        
    </tr>
        }

    </table>
</body>