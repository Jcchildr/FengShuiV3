<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @RenderSection("Styles", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        #footer {
            bottom: 100%;
            width: 100%;
            border-top: 2px outset black;
            background-color: transparent;
            color: black;
            text-align: center;
            font-family: Georgia, serif;
            font-size: 16px;
            letter-spacing: 0.2px;
            word-spacing: 2px;
            color: #000000;
            font-weight: 400;
            text-decoration: none;
            font-style: normal;
            font-variant: normal;
            text-transform: none;
        }
        h1 {
            top:100%;
            left:100%;
            font-family: Georgia, serif;
            letter-spacing: 2px;
            word-spacing: 2px;
            color: floralwhite;
            font-variant: small-caps;
        }
        li {
            font-family: Georgia, serif;
            letter-spacing: 2px;
            word-spacing: 2px;
            color: floralwhite;
            font-variant: small-caps;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="nav">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="container-fluid">
            <div class="navbar-header" id="Logo">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h1>
                    @Html.ActionLink("FengShui", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </h1>
            </div>
        |
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <span class="glyphicon glyphicon-list"></span></a>
                        <ul class="dropdown-menu">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Ambiences", "Index", "Ambience")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Ambience & Product Link", "Index", "ProductAmbience")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Products", "Index", "Product")</li>
                            }
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </div>

    <div class="container body-content">
        @RenderBody()
        <br />
    </div>
    <footer id="footer">
        <br />
        <br />
        @Html.ActionLink("About", "About", "Home") |
        @Html.ActionLink("Contact", "Contact", "Home")
        <p>&copy; @DateTime.Now.Year - Jacob Childress</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
